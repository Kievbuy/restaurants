<div class="container">

  <h1>New Restaurant</h1>
  
  <%= form_for @restaurant do |f| %>
  
    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.label :description %>
    <%= f.text_area :description %>
    
    <%= f.label "Choose Category" %>
    <%= f.select :category_id, Category.all.map{ |f| [f.name, f.id]} %>
    
    <%= f.label :address1 %>
    <%= f.text_field :address1 %>
    
    <%= f.label :address2 %>
    <%= f.text_field :address2 %>
    
    <%= f.label :city %>
    <%= f.text_field :city %>
    
    <%= f.label :state %>
    <%= f.text_field :state %>
    
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
    
    <%= f.label :phone %>
    <%= f.text_field :phone %>
    
    <%= f.label :email %>
    <%= f.text_field :email %>
    
    <div class="clearfix"></div>
    <br></br>
    
    <%= f.submit class: "btn span3 btn-large btn-realto-form" %>
    
  <% end  %>

</div>