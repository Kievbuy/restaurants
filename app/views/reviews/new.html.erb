<div class="container">

  <h1>New Review</h1>
  
  <%= form_for [@restaurant, @review] do |f| %>
  
    <%= f.label :comment %>
    <%= f.text_area :comment %>
    
    <%= f.label :rating %>
    <%= f.number_field :rating, value: 1, min: 1, max: 5 %>
    
    <br></br>
    
    <%= f.submit %>
  
  <% end %>

</div>